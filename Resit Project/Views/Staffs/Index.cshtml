@model IEnumerable<Resit_Project.Models.Staff>

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "breadcrumb-item" })
            <span class="breadcrumb-item active">Staff List</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="text-center">Staff List</h3>
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        @*<select class="custom-select" id="txtposition" name="txtposition" style="min-width: 200px;" asp-items="ViewBag.Combine">
                                 <option selected>CombineStage Name</option>
                            </select>*@
                    </div>  
                </div>
            </div>
            <div class="col-lg-6 text-right">
                @Html.ActionLink("Create New", "Create", "Staffs", new { area = "" }, new { @class = "btn btn-primary" })
            </div>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead class="table-secondary">
                    <tr>
                        <th>Id</th>
                        <th>FullName</th>
                        <th>Gender</th>
                        <th>Birthday</th>
                        <th>Address</th>
                        <th>StartDate</th>
                        <th>Salary</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StaffId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img style="max-width: 70px" class="img-fluid rounded" src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" />  
                                        <h6 class="m-b-0 m-l-10 p-2">@item.FullName</h6>
                                    </div>
                                </td>
                                <td>
                                    @item.Gender
                                </td>
                                <td>@item.Birthday.ToShortDateString()</td>
                                <td>@item.Address</td>
                                <td>@item.StartDate.ToShortDateString()</td>
                                <td>@item.TotalSalary</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.StaffId }, new { @class = "btn btn-sm btn-success rounded-0" })
                                    @Html.ActionLink("Details", "Details", new { id = item.StaffId }, new { @class = "btn btn-sm btn-info rounded-0" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.StaffId }, new { @class = "btn btn-sm btn-danger rounded-0" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            @*<div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="CombineStage" asp-action="Index" />
                    </ul>
                </div>*@
        </div>
    </div>
</div>