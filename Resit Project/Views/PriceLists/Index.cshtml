@model IEnumerable<Resit_Project.Models.PriceList>

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "breadcrumb-item" })
            <span class="breadcrumb-item active">Price List</span>
        </nav>
    </div>
</div>
    
<div class="card">
    <div class="card-body">
        <h3 class="text-center">Price List</h3>
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        @* <select class="custom-select" id="txtposition" name="txtposition" style="min-width: 200px;" asp-items="ViewBag.Machine">
                                <option selected>Machine</option>
                            </select>*@
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-right">
                @Html.ActionLink("Create New", "Create", "PriceLists", new { area = "" }, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Stage</th>
                        <th>Machine</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PricelistId</td>
                                <td>@item.Stage</td>
                                <td>@item.Machine</td>
                                <td>@item.Price.ToString("#,##0") ¢</td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.PricelistId }, new { @class = "btn btn-sm btn-info rounded-0" })
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PricelistId }, new { @class = "btn btn-sm btn-success rounded-0" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PricelistId }, new { @class = "btn btn-sm btn-danger rounded-0" })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="Staffs" asp-route-PositionId="@ViewBag.PositionId" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>